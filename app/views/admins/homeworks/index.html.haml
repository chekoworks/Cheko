= render 'admins/shared/header'
= render 'admins/shared/sidebar'
.row 
  .col-xl-8.col-lg-10.col-sm-12.ms-auto.me-auto 
    .container.mt-5
      %h3 Homeworks
      .card 
        .card-body
          .row 
            .col-6.text-start
              %h3 Pending
          .table-responsive
            %table.homeworks-scrollX.display.nowrap
              %thead
                %tr
                  %th Order created
                  %th Order Type
                  %th Type
                  %th Deadline
                  %th Subject
                  %th Tutor Category
                  %th Word Count
                  %th View Samples
                  %th View Skills
                  %th View Bidders
                  %th Priority
                  %th Login
                  %th Action
              %tbody
                =render partial: 'admins/homeworks/pending-table', collection: @pending, as: :home
               
      .card.mt-5
        .card-body
          .row 
            .col-6.text-start
              %h3 Ongoing
          .table-responsive
            %table.homeworks-scrollX.display.nowrap
              %thead
                %tr
                  %th id
                  %th Client
                  %th Tutor
                  %th Sub Tutor
                  %th TL
                  %th TM
                  %th Order Number
                  %th Payment to Tutor
                  %th Client's payment
                  %th Profit
                  %th Additional
                  %th Updates
                  %th Deadline
                  %th Subject
                  %th Time Received
                  %th Hours Late
                  %th Notes
                  %th Prof
                  %th Grade
                  %th Status
                  %th Action
              %tbody
                =render partial: 'admins/homeworks/ongoing-table', collection: @ongoing, as: :home
      .card.mt-5.mb-5
        .card-body
          .row 
            .col-6.text-start
              %h3 History
          .table-responsive
            %table.homeworks-scrollX.display.nowrap
              %thead
                %tr
                  %th Name
                  %th Client
                  -# %th Type
                  %th Status
                  %th Lead
                  %th Manager
                  %th Tutor
                  %th Deadline
                  %th Code
                  %th Subject
                  %th Tutor Category
                  %th Word Count
                  %th View Samples
                  %th View Skills
                  %th View Bidders
                  %th Priority
                  %th Login
                  %th Action
              %tbody
                =render partial: 'admins/homeworks/history-table', collection: @history, as: :home


= javascript_pack_tag 'datatable_basic'