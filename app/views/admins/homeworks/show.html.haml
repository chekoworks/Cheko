= render 'admins/shared/header'
= render 'admins/shared/sidebar'
.row 
  .col-xl-8.col-lg-10.col-sm-12.ms-auto.me-auto 
    .container.mt-5
      %h4= @homework.user.name
  .col-6.ms-auto.me-auto 
    .card
      .card-body
        .row.mt-3
          .col-12 
            %h5 Details:
            %p= @homework.details
          .col-6
            %h5 Deadline:
            %p= @homework.deadline
          .col-6
            %h5 Subject:
            %p= @homework.subject_id.present? ? @homework.subject.name : "None Provided"
          .col-6
            %h5 Words:
            %p= @homework.words
          .col-6
            %h5 Target Grade:
            %p= @homework.grade
.row.mt-5
  .col-6.ms-auto.me-auto 
    .card
      .card-body
        .row.mt-3
          .col-6 
            %h5= "Tutors Interested: #{@bids.present? ? @bids.count : 0}"
          .col-6.text-end
            - if @homework.tutor_id.nil?
              = link_to "Assign", edit_admins_homework_path(@homework), class: "btn btn-primary"
          .col-12
            .table-responsive
              %table.table
                %thead
                  %tr
                    %th.text-start Tutor
                    %th.text-start Offer
                %tbody
                  - unless @bids.blank?
                    - @bids.each do |bid|
                      %tr
                        %td.text-start= bid.tutor.name
                        %td.text-start= bid.ammount
                  -else
                    %td No Data found
          
          
