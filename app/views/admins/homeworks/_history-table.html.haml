%tr
  %td= home.name
  %td= home.user.name
  -# %td= home.type
  %td= home.tutor_category.titleize
  %td= home.status.capitalize
  %td= home.admin.name if home.admin_id.present?
  %td= home.manager.name if home.manager_id.present?
  %td= home.tutor.name if home.tutor_id.present?
  %td= home.deadline.strftime("%B %d, %Y")
  %td= home.id
  %td= home.subject
  %td= home.tutor_category
  %td= home.words
  %td= home.tutor_samples
  %td= home.tutor_skills
  %td= home.view_bidders
  %td= home.priority
  %td= home.login_school
  %td
    = link_to :show, admins_homework_path(home)
    - if home.admin_id == current_admin.id || current_admin.role == 'super_admin'
      = link_to :edit, edit_admins_homework_path(home)
    - elsif home.admin_id.nil?
      = link_to :assign, admins_homework_assign_path(homework_id: home.id), method: :put
    - if current_admin.role == 'super_admin'
      = link_to :delete, admins_homework_path(home), method: :delete