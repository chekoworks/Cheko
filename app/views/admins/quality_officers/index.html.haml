= render 'admins/shared/header'
.container-fluid
  .row
    .col-md-3.col-lg-2
      = render 'admins/shared/sidebar'
    .col-md-9.col-lg-10
      .row 
        .col-xl-10.col-lg-10.col-sm-12.ms-auto.me-auto 
          .container-flex.mt-5
            .card{class: "card card-#{cookies[:theme]}" } 
              .card-body
                .row 
                  .col-6.text-start
                    %h3 Quality Officers
                  .col-6.text-end 
                    = link_to "New QCO", new_admins_quality_officer_path, class: "btn btn-primary"
                .table-responsive
                  %table.datatableBasic.display.nowrap
                    %thead
                      %tr
                        %th.text-start id
                        %th.text-center Name
                        %th.text-end Action
                    %tbody
                      - @officers.each do |qo|
                        %tr
                          %td.text-start= qo.id
                          %td.text-center= qo.name
                          %td.text-end
                            %a.fas.fa-eye.text-success.font-16.mr-3{href: admins_quality_officer_path(qo)}

= javascript_pack_tag 'datatable_basic'