= render 'admins/shared/header'
= render 'admins/shared/sidebar'
.row 
  .col-xl-8.col-lg-10.col-sm-12.ms-auto.me-auto 
    .container.mt-5
      .card 
        .card-body
          .row.mb-3
            .col-6.text-start.ms-auto.me-auto 
              %h5 Update Professor
          .row
            .col-6.ms-auto.me-auto
              = form_for @professor, url: admins_professor_path, method: :put do |f|
                .mb-3
                  .field
                    = f.label :first_name, class: "form-label"
                    = f.text_field :first_name, class: "form-control", required: true, value: @professor.first_name
                .mb-3
                  .field
                    = f.label :last_name, class: "form-label"
                    = f.text_field :last_name, class: "form-control", required: true, value: @professor.last_name
                .mb-3
                  .field
                    = f.label :school, class: "form-label"
                    = f.select :school_id, School.all.collect {|p| [ p.name, p.id ] }, { selected: @professor.school_id }, class: "form-select"
                .mb-3
                  .field
                    = f.label :easiness, class: "form-label"
                    %h6#percent= "#{@professor.easiness}%"
                    = f.range_field :easiness, class: "form-range", in: 1..100, value: @professor.easiness
                .mb-3
                  .field
                    = f.label :effectiveness, class: "form-label"
                    %h6#percent_ef= "#{@professor.effectiveness}%"
                    = f.range_field :effectiveness, class: "form-range", in: 1..100, value: @professor.effectiveness
                .mb-3
                  .field
                    = f.label :life_changing, class: "form-label"
                    %h6#percent_lf= "#{@professor.life_changing}%"
                    = f.range_field :life_changing, class: "form-range", in: 1..100, value: @professor.life_changing
                .mb-3
                  .field
                    = f.label :light_workload, class: "form-label"
                    %h6#percent_lw= "#{@professor.light_workload}%"
                    = f.range_field :light_workload, class: "form-range", in: 1..100, value: @professor.light_workload
                .mb-3
                  .field
                    = f.label :leniency, class: "form-label"
                    %h6#percent_len= "#{@professor.leniency}%"
                    = f.range_field :leniency, class: "form-range", in: 1..100, value: @professor.leniency
                .mb-3
                  .field.row
                    .col-6
                      -# = f.label :average, class: "form-label"
                      %h2 Average:
                    .col-6 
                      %h2#percent_av= "#{@professor.average}%"
                    = f.hidden_field :average, class: "form-range", id: "professor_average", value: @professor.average
                %hr
                .mb-3
                  %h4 Additional Metrics: 
                .mb-3
                  .field
                    = f.label :a_able, "A-able", class: "form-label"
                    %h6#percent_aable= "#{@professor.a_able}%"
                    = f.range_field :a_able, class: "form-range", in: 1..100, value: @professor.a_able
                .mb-3
                  .field
                    = f.label :b_pls_able, "B+-able", class: "form-label"
                    %h6#percent_bbable= "#{@professor.b_pls_able}%"
                    = f.range_field :b_pls_able, class: "form-range", in: 1..100, value: @professor.b_pls_able
                .mb-3
                  .field
                    = f.label :b_able, "B-able", class: "form-label"
                    %h6#percent_bable= "#{@professor.b_able}%"
                    = f.range_field :b_able, class: "form-range", in: 1..100, value: @professor.b_able
                .mb-3
                  .field
                    = f.label :c_able, "C-able", class: "form-label"
                    %h6#percent_cable= "#{@professor.c_able}%"
                    = f.range_field :c_able, class: "form-range", in: 1..100, value: @professor.c_able
                %hr
                .mb-3
                  .field
                    = f.label :batch1_able, "Batch 1-able", class: "form-label"
                    %h6#percent_b1able= "#{@professor.batch1_able}%"
                    = f.range_field :batch1_able, class: "form-range", in: 1..100, value: @professor.batch1_able
                .mb-3
                  .field
                    = f.label :batch2_able, "Batch 2-able", class: "form-label"
                    %h6#percent_b2able= "#{@professor.batch2_able}%"
                    = f.range_field :batch2_able, class: "form-range", in: 1..100, value: @professor.batch2_able
                .mb-3
                  .field
                    = f.label :batch3_able, "Batch 3-able", class: "form-label"
                    %h6#percent_b3able= "#{@professor.batch3_able}%"
                    = f.range_field :batch3_able, class: "form-range", in: 1..100, value: @professor.batch3_able
                .mb-3
                  .field
                    = f.label :batch4_able, "Batch 4-able", class: "form-label"
                    %h6#percent_b4able= "#{@professor.batch4_able}%"
                    = f.range_field :batch4_able, class: "form-range", in: 1..100, value: @professor.batch4_able
                %hr
                %h4 Our comment
                .mb-3
                  .field
                    = f.label :our_comments, class: "form-label"
                    = f.text_area :our_comments, class: "form-control", rows: 10, value: @professor.our_comments
                .mb-3
                  .actions
                    = f.submit "Update", class: "btn btn-primary"

= javascript_pack_tag 'professors/new'