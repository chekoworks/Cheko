= render 'admins/shared/header'
.container-fluid
  .row
    .col-md-3.col-lg-2
      = render 'admins/shared/sidebar'
    .col-md-9.col-lg-10
      .row 
        .col-xl-8.col-lg-10.col-sm-12.ms-auto.me-auto 
          .container.mt-5
            .card{class: "card card-#{cookies[:theme]}" }  
              .card-body
                .row 
                  .col-12.text-start 
                    %h5 Add Accountant
                  .col-6.ms-auto.me-auto
                    = form_for @accountant, url: admins_accountants_path, method: :post do |f|
                      .mb-3
                        .field
                          = f.label :first_name, class: "form-label"
                          = f.text_field :first_name, class: "form-control", required: true
                      .mb-3
                        .field
                          = f.label :last_name, class: "form-label"
                          = f.text_field :last_name, class: "form-control", required: true
                      .mb-3
                        .field
                          = f.label :email, class: "form-label"
                          = f.email_field :email, class: "form-control", required: true
                      .mb-3
                        .field
                          = f.label :password, class: "form-label"
                          = f.password_field :password, class: "form-control", required: true
                      .mb-3
                        .actions
                          = f.submit "Create", class: "btn btn-primary"