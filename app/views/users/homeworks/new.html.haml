= render 'users/shared/header'
.row 
  .col-xl-8.col-lg-10.col-sm-12.ms-auto.me-auto 
    .container.mt-5
      .card 
        .card-body
          .row 
            .col-12.text-start 
              %h5= "Add Homework - #{params[:type].titleize}"
            .col-6.ms-auto.me-auto
              - case params[:type]
              - when 'essay'
                = render 'users/homeworks/essay'
              - when 'group_project'
                = render 'users/homeworks/group'
              - when 'code'
                = render 'users/homeworks/code'
              - when 'math'
                = render 'users/homeworks/math'
              - when 'art'
                = render 'users/homeworks/art'
              - when 'translation'
                = render 'users/homeworks/translation'
              - when 'law_related_tasks'
                = render 'users/homeworks/law'
              - when 'science'
                = render 'users/homeworks/science'
              - when 'economics'
                = render 'users/homeworks/economics'
              - when 'robotics'
                = render 'users/homeworks/robotics'
              - when 'sketchup'
                = render 'users/homeworks/sketchup'
              - when 'foreign_language'
                = render 'users/homeworks/foreign_language'
              - when 'thesis'
                = render 'users/homeworks/thesis'
              - when 'module'
                = render 'users/homeworks/module'
              - else
                .mb-3
                  %h5 Type of homework is not yet supported