= form_for @homework, url: users_homeworks_path, method: :post do |f|
  = f.hidden_field :order_type, :value => params[:type]
  .mb-3
    .row
      .col-6
        .field
          = f.label :subject, "How many Subjects?", class: "form-label"
          = f.text_field :subject, class: "form-control",  :rows => 10
      .col-6
        .field
          = f.label :budget, "Whats your budget", class: "form-label"
          = f.text_field :budget, class: "form-control"
  .mb-3
    .field
      = f.label :details, class: "form-label"
      = f.text_area :details, class: "form-control",  :rows => 10
  .mb-3
    .field
      = f.label :payment_type, class: "form-label"
      = f.select :payment_type, options_for_select([["GCash" , "gcash" ], ["Bank Transfer" , "bank" ]], selected: :payment_type), {include_blank: false} , class: "form-control"
  .mb-3
    .field
      = f.label :deadline, class: "form-label"
      = f.date_field :deadline, class: "form-control"
  .mb-3 
    .field 
      = f.label :tutor_skills, "View tutors skill profile for P100"
      %br/
      .form-check
        = f.radio_button :tutor_skills, true, class: "form-check-input"
        = f.label :tutor_skills, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :tutor_skills, false, class: "form-check-input"
        = f.label :tutor_skills, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :tutor_samples, "View tutors sample works for P100"
      %br/
      .form-check
        = f.radio_button :tutor_samples, true, class: "form-check-input"
        = f.label :tutor_samples, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :tutor_samples, false, class: "form-check-input"
        = f.label :tutor_samples, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :view_bidders, "View all bidders, their skill profiles and their sample works for P300"
      %br/
      .form-check
        = f.radio_button :view_bidders, true, class: "form-check-input"
        = f.label :view_bidders, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :view_bidders, false, class: "form-check-input"
        = f.label :view_bidders, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :login_school, "Want us to login to your school account for P200"
      %br/
      .form-check
        = f.radio_button :login_school, true, class: "form-check-input"
        = f.label :login_school, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :login_school, false, class: "form-check-input"
        = f.label :login_school, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :priority, "Make it a priority? +30%"
      %br/
      .form-check
        = f.radio_button :priority, true, class: "form-check-input"
        = f.label :priority, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :priority, false, class: "form-check-input"
        = f.label :priority, "No", :value => "false", class: "form-check-label"
  -# .mb-3
  -#   .field
  -#     = label_tag "file", "Files", class: "form-label"
  -#     = file_field_tag "files", class: "form-control"
  .mb-3
    .actions
      = f.submit "Create", class: "btn btn-primary"