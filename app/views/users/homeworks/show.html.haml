              .col-6.text-start
                %h4= @homework.order_type.titleize
              .col-6.text-end
                %button.btn.btn-primary{"data-bs-target" => "#exampleModal", "data-bs-toggle" => "modal", type: "button"}
                  Files
            .row.mt-3
              .col-6
                %h5= "Client: #{@homework.user.name}"
            .row.mt-3
              .col-6
                %h5 Deadline:
                %p= @homework.deadline
                %h5 Subject:
                %p= @homework.subject_id.present? ? @homework.subject.name : "None Provided"
              .col-3
                %h5 Words:
                %p= @homework.words
                %h5 Target Grade:
                %p= @homework.grade
              .col-xl-3.col-lg-6.col-md-6.col-sm-6.ms-auto.me-auto
                %h5 Payment
                -if @homework.payment_type == "gcash"
                  = image_tag "qr.jpg", class: "img-thumbnail ms-auto me-auto"
