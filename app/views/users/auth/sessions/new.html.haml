%main.h-screen.flex.relative
  = render "users/shared/sidebar"
  .flex.p-4.flex-1.items-center.justify-content-center.my-2.5.mr-2.5.rounded-lg.bg-neutral-900.border-1.border-neutral-700
    .container
      .row
        .col-sm-12.col-md-6.ms-auto.me-auto.mt-5
          .card.bg-neutral-800.text-white.p-2
            .card-body
              %h2 Users Log in
              -if flash.any?
                .row.text-center
                  - flash.each do |type, msg|
                    .col-lg-12.col-md-12.col-sm-12.alert.mt-3.mb-3{class: type == "alert" ? "alert-danger" : "alert-success"}
                      = msg
              = form_for(resource, as: resource_name, url: user_session_path) do |f|
                .mb-3
                  .field
                    = f.label :email, class: "form-label"
                    %br/
                    = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
                .mb-3
                  .field
                    = f.label :password, class: "form-label"
                    %br/
                    = f.password_field :password, class: "form-control", autocomplete: "current-password"
                .mb-3
                  .actions
                    = f.submit "Log in", class: "btn btn-primary"
              = link_to "Register", new_user_registration_path
              %br
              = link_to "Forgot your password?", new_user_password_path(resource_name)
