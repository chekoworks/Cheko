%main.h-screen.flex.relative.gpt-wrapper
  = render "users/shared/sidebar"
  .flex.flex-1.items-center.justify-content-center.my-3.mr-3.rounded-lg.bg-neutral-900.p-0.ans-wrapper
    .bg-neutral-800.rounded-lg.border-1.border-neutral-700.w-full.h-full.relative
      .card-header.d-flex.align-items-center.p-3.border-neutral-700.justify-content-between
        %div.flex.justify-content-center.font-medium.gap-2.align-items-center
          = image_tag("cheko_ai_profile.jpg", class:"rounded-full w-8 h-8")
          %h6.text-white.m-0 Cheko AI
        %p.mb-0.text-neutral-400
          %i.fa.fa-check
          %span Saved
      .card-body.px-5.py-3
        .card-body-top
          #gpt-chat-container
            .chat-bubble-cheko.bg-neutral-700.text-white.border-1.border-neutral-500.text-md.font-semibold
              Hello! I'm Cheko, an AI-powered writing assistant to help you finish your homework fast!
          -# Loading animation (enabled/disabled when prompting)
          #cheko-loading-bubble.d-none.bg-neutral-700.border-1.border-neutral-500
            .loading-icon
              %span
              %span
              %span
        .prompt-container.absolute.bottom-5.w-full.left-0.px-10
          = form_tag do
            .form-group
              -# %label{for: "prompt"} Prompt
              %textarea.bg-neutral-600.border-1.border-neutral-500.placeholder-neutral-300.text-white.form-control#prompt{rows: "2"}(placeholder='Ask any question here. (Enter to send, Shift + Enter for new line)')
            -# = submit_tag "Send", class: "bg-cheko mt-2 text-white px-4 py-2 rounded-full", id: "generate-btn"
            -# %button.btn.btn-secondary#humanize-text-button Humanize Text
            -# %button.btn.btn-secondary#add-citations-button Add Citations

= javascript_pack_tag 'gpt3', 'data-turbolinks-track': 'reload'
