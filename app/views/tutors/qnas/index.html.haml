= render 'tutors/shared/header'
= render 'tutors/shared/chat-widget'
.container.fluid
  .row
    .col-12.ms-auto.me-auto 
      .mt-5.mx-2
        %div{class: "card card-#{cookies[:theme]}" }
          .card-body
            .row 
              .col-12.text-start
                %h3 Q&A - Pending
            %div{class: "table-responsive "}
              %table.datatableBasic
                %thead
                  %tr
                    %th.text-start Order no.
                    %th.text-center Question
                    %th.text-center Subject
                    %th.text-end Action
                %tbody
                  - @pending.each do |qna|
                    %tr
                      %td.text-start= qna.id
                      %td.text-center= truncate(qna.question)
                      %td.text-center= qna.subject.titleize
                      %td.text-end
                        %a{href: tutors_qna_path(qna)}
                          .fas.fa-eye.text-primary.font-16.mr-3
                        %a{href: tutors_qna_assign_path(qna), data: {method: 'put'}}
                          .fas.fa-circle-check.text-success.font-16.mr-3
  .row 
    .col-12.ms-auto.me-auto 
      .mt-5.mx-2
        %div{class: "card card-#{cookies[:theme]}" }
