= form_for @homework, url: users_homeworks_path, method: :post do |f|
  = f.hidden_field :order_type, :value => params[:type]
  %h3 Type
  %stuff
    .mb-3
      .field
        = f.label :subject, "How many Subjects?", class: "form-label"
        = f.text_field :subject, class: "form-control",  :rows => 10
  
  %h3 Details
  %stuff
    .mb-3
      .field
        = f.label :deadline, class: "form-label"
        = f.date_field :deadline, class: "form-control"
    .mb-3
      .field
        = f.label :details, class: "form-label"
        = f.text_area :details, class: "form-control",  :rows => 10
  %h3 Payment
  %stuff
    .mb-3
      .field
        = f.label :payment_type, class: "form-label"
        = f.select :payment_type, options_for_select([["GCash" , "gcash" ], ["Bank Transfer" , "bank" ]], selected: :payment_type), {include_blank: false} , class: "form-select"
    .mb-3.d-flex.flex-row
      .container.p-1
        = label_tag :view_skill, "View tutors skill profile for P100"
        .form-check.form-switch
          = check_box_tag "homework[tutor_skills]", true, false, class: "form-check-input"
      
      .container.p-1
        = label_tag :view_sample, "View tutors sample works for P100"
        .form-check.form-switch
          = check_box_tag "homework[tutor_samples]", true, false, class: "form-check-input"

      .container.p-1
        = label_tag :view_bidders, "View all bidders, their skill profiles and their sample works for P300"
        .form-check.form-switch
          = check_box_tag "homework[view_bidders]", true, false, class: "form-check-input"
          
      .container.p-1
        = label_tag :login_school, "Want us to login to your school account for P200"
        .form-check.form-switch
          = check_box_tag "homework[login_school]", true, false, class: "form-check-input"
          
      .container.p-1
        = label_tag :priority, "Make it a priority? +30%"
        .form-check.form-switch
          = check_box_tag "homework[priority]", true, false, class: "form-check-input"
    -# .mb-3
    -#   .field
    -#     = label_tag "file", "Files", class: "form-label"
    -#     = file_field_tag "files", class: "form-control"
  %h3 Register
  %stuff
    .mb-3
      .field
        = label_tag :first_name, "First Name"
        = text_field_tag "user[first_name]", "", class: "form-control", required: true
    .mb-3
      .field
        = label_tag :last_name, "Last Name"
        = text_field_tag "user[last_name]", "", class: "form-control", required: true
    .mb-3
      .field
        = label_tag :email, "Email"
        = email_field_tag "user[email]", "", class: "form-control", required: true
    .mb-3
      .field
        = label_tag :birthday,"Birthday", class: "form-label"
        = date_field_tag :birthday, "", class: "form-control"
    .mb-3
      .field
        = label_tag :password, "Password"
        %em
          (6 characters minimum)
        = password_field_tag "user[password]", "", class: "form-control", required: true
    .mb-3  
      .field
        = label_tag :password, "Password Confirmation"
        = password_field_tag "user[password_confirmation]", "", class: "form-control", required: true