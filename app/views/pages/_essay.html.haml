= form_tag user_registration_path, method: :post do
  = hidden_field_tag "homeworks[order_type]", params[:type]
  .mb-3
    .field
      = label_tag :details, "Details", class: "form-label"
      = text_area_tag "homeworks[details]", '', rows: 10, class: "form-control"
  .mb-3
    .field
      = label_tag :subject, "Subject", class: "form-label"
      = text_field_tag "homeworks[subject]", '', class: "form-control"
  .mb-3
    .field
      = label_tag :type, "Type", class: "form-label"
      = select_tag "homeworks[sub_type]", options_for_select([["Short Essay" , "short_essay" ], ["Essay" , "essay" ], ["Research Paper" , "ressearch_paper" ], ["Script" , "script" ], ["Admissions Essay" , "admission_essay" ]], selected: :payment_type), class: "form-control"
  .mb-3
    .field
      = label_tag :grade, "Target Grade", class: "form-label"
      = select_tag "homeworks[grade]", options_for_select([["A" , "a" ], ["B" , "b" ], ["C" , "c" ]], selected: :grade), class: "form-control"
  .mb-3
    .field
      = label_tag :payment_type, "Payment Type", class: "form-label"
      = select_tag "homeworks[payment_type]", options_for_select([["GCash" , "gcash" ], ["Bank Transfer" , "bank" ]], selected: :payment_type), class: "form-control"
  .mb-3
    .field
      = label_tag :budget, "Whats your budget", class: "form-label"
      = text_field_tag "homeworks[budget]", "", class: "form-control"
  .mb-3
    .field
      = label_tag :deadline, "Deadline", class: "form-label"
      = date_field_tag "homeworks[deadline]", "", class: "form-control"
  .mb-3 
    .field 
      = label_tag :tutor_category, "Pick a type of writer"
      %br/
      .form-check
        = radio_button_tag "homeworks[tutor_category]", "a_plus", class: "form-check-input"
        = label_tag :tutor_category, "A-List Writes - P3 per word", :value => 0, class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[tutor_category]", "cheko", class: "form-check-input"
        = label_tag :tutor_category, "Cheko+ Writers - P2 per word", :value => 1, class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[tutor_category]", "standard", class: "form-check-input"
        = label_tag :tutor_category, "Standard Writers - P1 per word", :value => 2, class: "form-check-label"
  .mb-3
    .field
      = label_tag :target_words, "Target Words", class: "form-label"
      .form-check
        = radio_button_tag "homeworks[words]", 1000, class: "form-check-input"
        = label_tag :target_words, "1000", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[words]", 2000, class: "form-check-input"
        = label_tag :target_words, "2000", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[words]", "", class: "form-check-input"
        = label_tag :target_words, "other", class: "form-check-label"
      = text_field_tag "homeworks[words]", "", class: "form-control", placeholder: "Input a different ammount", disabled: true
  .mb-3 
    .field 
      = label_tag :view_skill, "View tutors skill profile for P100"
      %br/
      .form-check
        = radio_button_tag "homeworks[tutor_skills]", true, class: "form-check-input"
        = label_tag :tutor_skills, "Yes", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[tutor_skills]", false, class: "form-check-input"
        = label_tag :tutor_skills, "No", class: "form-check-label"
  .mb-3 
    .field 
      = label_tag :view_sample, "View tutors sample works for P100"
      %br/
      .form-check
        = radio_button_tag "homeworks[tutor_samples]", true, class: "form-check-input"
        = label_tag :view_sample, "Yes", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[tutor_samples]", false, class: "form-check-input"
        = label_tag :view_sample, "No", class: "form-check-label"
  .mb-3 
    .field 
      = label_tag :view_bidders, "View all bidders, their skill profiles and their sample works for P300"
      %br/
      .form-check
        = radio_button_tag "homeworks[view_bidders]", true, class: "form-check-input"
        = label_tag :view_bidders, "Yes", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[view_bidders]", false, class: "form-check-input"
        = label_tag :view_bidders, "No", class: "form-check-label"
  .mb-3 
    .field 
      = label_tag :login_school, "Want us to login to your school account for P200"
      %br/
      .form-check
        = radio_button_tag "homeworks[login_school]", true, class: "form-check-input"
        = label_tag :login_school, "Yes",  class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[login_school]", false, class: "form-check-input"
        = label_tag :login_school, "No", class: "form-check-label"
  .mb-3 
    .field 
      = label_tag :priority, "Make it a priority? +30%"
      %br/
      .form-check
        = radio_button_tag "homeworks[priority]", true, class: "form-check-input"
        = label_tag :priority, "Yes", class: "form-check-label"
      .form-check
        = radio_button_tag "homeworks[priority]", false, class: "form-check-input"
        = label_tag :priority, "No", class: "form-check-label"
  -# .mb-3
  -#   .field
  -#     -# = label_tag "file", "Files", class: "form-label"
  -#     = file_field_tag "files", class: "form-control"
  -# .mb-3
  -#   .actions
  -#     = f.submit "Create", class: "btn btn-primary"
  .mb-3
    .field
      = label_tag :first_name, "First Name"
      = text_field_tag "user[first_name]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :last_name, "Last Name"
      = text_field_tag "user[last_name]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :email, "Email"
      = email_field_tag "user[email]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :birthday,"Birthday", class: "form-label"
      = date_field_tag :birthday, "", class: "form-control"
  .mb-3
    .field
      = label_tag :password, "Password"
      %em
        (6 characters minimum)
      = password_field_tag "user[password]", "", class: "form-control", required: true
  .mb-3  
    .field
      = label_tag :password, "Password Confirmation"
      = password_field_tag "user[password_confirmation]", "", class: "form-control", required: true
  .mb-3  
    .actions
      = submit_tag "Sign up", class: "btn btn-primary"