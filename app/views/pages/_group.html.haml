= form_for @homework, url: users_homeworks_path, method: :post do |f|
  = f.hidden_field :order_type, :value => params[:type]
  .mb-3
    .field
      = f.label :details, class: "form-label"
      = f.text_area :details, class: "form-control",  :rows => 10
  .mb-3
    .field
      = f.label :sub_type, "Type of Work", class: "form-label"
      = f.text_field :sub_type, class: "form-control"
  .mb-3
    .field
      = f.label "Target Grade", class: "form-label"
      = f.select :grade, options_for_select([["A" , "a" ], ["B" , "b" ], ["C" , "c" ]], selected: :grade), {include_blank: false}, class: "form-control"
  .mb-3
    .field
      = f.label :payment_type, class: "form-label"
      = f.select :payment_type, options_for_select([["GCash" , "gcash" ], ["Bank Transfer" , "bank" ]], selected: :payment_type), {include_blank: false} , class: "form-control"
  .mb-3
    .field
      = f.label "Whats your budget", class: "form-label"
      = f.text_field :budget, class: "form-control"
  .mb-3
    .field
      = f.label :deadline, class: "form-label"
      = f.date_field :deadline, class: "form-control"
  .mb-3 
    .field 
      = f.label :tutor_category, "Pick a type of writer"
      %br/
      .form-check
        = f.radio_button :tutor_category, true, class: "form-check-input"
        = f.label :tutor_category, "A-List Writes - P3 per word", :value => 0, class: "form-check-label"
      .form-check
        = f.radio_button :tutor_category, false, class: "form-check-input"
        = f.label :tutor_category, "Cheko+ Writers - P2 per word", :value => 1, class: "form-check-label"
      .form-check
        = f.radio_button :tutor_category, false, class: "form-check-input"
        = f.label :tutor_category, "Standard Writers - P1 per word", :value => 2, class: "form-check-label"
  .mb-3
    .field
      = f.label "Target Words", class: "form-label"
      .form-check
        = f.radio_button :words, true, class: "form-check-input"
        = f.label :words, "1000", :value => 1000, class: "form-check-label"
      .form-check
        = f.radio_button :words, false, class: "form-check-input"
        = f.label :words, "2000", :value => 2000, class: "form-check-label"
      = f.text_field :words, class: "form-control", placeholder: "Input a different ammount"
  .mb-3 
    .field 
      = f.label :tutor_skills, "View tutors skill profile for P100"
      %br/
      .form-check
        = f.radio_button :tutor_skills, true, class: "form-check-input"
        = f.label :tutor_skills, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :tutor_skills, false, class: "form-check-input"
        = f.label :tutor_skills, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :tutor_samples, "View tutors sample works for P100"
      %br/
      .form-check
        = f.radio_button :tutor_samples, true, class: "form-check-input"
        = f.label :tutor_samples, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :tutor_samples, false, class: "form-check-input"
        = f.label :tutor_samples, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :view_bidders, "View all bidders, their skill profiles and their sample works for P300"
      %br/
      .form-check
        = f.radio_button :view_bidders, true, class: "form-check-input"
        = f.label :view_bidders, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :view_bidders, false, class: "form-check-input"
        = f.label :view_bidders, "No", :value => "false", class: "form-check-label"
  .mb-3 
    .field 
      = f.label :login_school, "View all bidders, their skill profiles and their sample works for P300"
      %br/
      .form-check
        = f.radio_button :login_school, true, class: "form-check-input"
        = f.label :login_school, "Yes", :value => "true", class: "form-check-label"
      .form-check
        = f.radio_button :login_school, false, class: "form-check-input"
        = f.label :login_school, "No", :value => "false", class: "form-check-label"
  -# .mb-3
  -#   .field
  -#     = label_tag "file", "Files", class: "form-label"
  -#     = file_field_tag "files", class: "form-control"
  .mb-3
    .field
      = label_tag :first_name, "First Name"
      = text_field_tag "user[first_name]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :last_name, "Last Name"
      = text_field_tag "user[last_name]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :email, "Email"
      = email_field_tag "user[email]", "", class: "form-control", required: true
  .mb-3
    .field
      = label_tag :birthday,"Birthday", class: "form-label"
      = date_field_tag :birthday, "", class: "form-control"
  .mb-3
    .field
      = label_tag :password, "Password"
      %em
        (6 characters minimum)
      = password_field_tag "user[password]", "", class: "form-control", required: true
  .mb-3  
    .field
      = label_tag :password, "Password Confirmation"
      = password_field_tag "user[password_confirmation]", "", class: "form-control", required: true
  .mb-3
    .actions
      = f.submit "Create", class: "btn btn-primary"